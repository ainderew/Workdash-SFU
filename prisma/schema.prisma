generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  ADMIN
  MEMBER
  GUEST
}

enum UserStatus {
  ONLINE
  OFFLINE
  FOCUS
}

enum CharacterType {
  ADULT
  CHILD
}

enum ItemType {
  SMARTPHONE
  LAPTOP
  TABLET
  NONE
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  passwordHash  String
  name          String?
  image         String?
  role          UserRole  @default(MEMBER)
  status        UserStatus @default(OFFLINE)
  level         Int       @default(1)

  character     Character?

  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  presence      Presence?

  @@index([email])
}


model Character {
  id            Int           @id @default(autoincrement())
  userId        Int           @unique
  name          String
  type          CharacterType

  bodyId        Int
  eyesId        Int
  hairstyleId   Int
  outfitId      Int
  accessoryId    Int?
  itemId        Int?
  itemType      ItemType?

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Presence {
  userId      Int     @id
  isOnline    Boolean @default(false)
  lastSeenAt  DateTime?

  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
